@*to add the comments into this view, change the model from Models.Report to ReportWithComments*@
@model News.Models.ReportWithComments


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        @*change the model parameters to point to the Report model*@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Report.ReportName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Report.ReportName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Report.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Body)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Report.Body)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Report.CreatedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Report.CreatedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Report.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Report.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Report.LastUpdatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Report.LastUpdatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Report.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Report.Category)
        </dd>
    </dl>
</div>
<div>
    @*change the model to be Model?.Report.Id, not Model?.Id*@
    <a asp-action="Edit" asp-route-id="@Model?.Report.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <h4>Report</h4>
    <hr />
    <ul>
        @foreach(var comment in Model.Comments)
        {
            <li>
                @Html.DisplayFor(modelItem =>  comment.comment)
            </li>
        }
    </ul>
</div>